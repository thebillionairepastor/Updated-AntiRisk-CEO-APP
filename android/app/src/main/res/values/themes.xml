<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CEOAdvisorySuite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ceo_navy</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/ceo_gold</item>
        <item name="android:statusBarColor">@color/ceo_navy</item>
    </style>

    <!-- Splash Screen Theme (Android 12+ API) -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/ceo_navy</item>
        <!-- Set the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!-- Set the duration of the icon animation -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Set the theme to apply after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.CEOAdvisorySuite</item>
    </style>
</resources>